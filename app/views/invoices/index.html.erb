<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
				<td><%= "Subtotal: #{number_to_currency(invoice.base_price)}" %></td>
				<td><%= "Discount: #{invoice.discount*100}%" %></td>
				<td><%= "Amount Due: #{number_to_currency(invoice.cost)}" %></td>
				<td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

